= f.input :title
= show_button "https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet", "Markdown Help"
= f.input :description, as: :text, input_html: { cols: 5, rows: 10 }
= f.input :nodes, as: :text, input_html: { cols: 5, rows: 10 }
= f.input :chapter_marks, as: :text, input_html: { cols: 5, rows: 10 }, hint: "chapter marks format: 00:00:41.018 Intro"

= f.hidden_field :image, value: f.object.cached_image_data
= image_tag f.object.image_url, size: "50x50" if  f.object.cached_image_data || f.object.image
= f.input :image, as: :file

- if f.object.audio.respond_to?(:attached?) && f.object.audio.attached?
  =  "The currently attached file is #{f.object.audio.filename}. Click here to replace this file."
= f.input :audio, as: :file
= f.input :published_on, as: :date, html5: true
= f.input :active, as: :boolean
